#body

#headtitle Completed Projects

%table{:border => 1, :width => "70%"}
    %tr{:height => "40px"}
        %th{:align=> "left"} Project Name
        %th{:align=> "left"} Description
        %th{:align=> "left"} Tags
        %th{:align=> "left"} Agency
        %th{:align=> "left"} Date
  
    - @projects.each do |project|
        %tr{:height => "40px"}
            %td= link_to project.name, project_path(project)
            %td.description
                .description=project.description
            %td= project.tags.join ", "
            %td= link_to project.agency.name, agency_path(project.agency)
            %td= project.created_at.to_date

#footer.pageFooter
