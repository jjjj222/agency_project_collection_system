!!!
-#%head
-#    %h1 TAMU Non-Profit Projects Collect System
-#%body
#content
    #left{:float => "left", :width => "30%"}
        -#%p
        %input{:size => "15", :maxlength => "100", :name => "search_index", :type => "text", :value => ""}/
        %br
        %button{:type => "button"} Search
        -#%p
        -#= link_to "Create Project", new_project_path
        -#%br
        -#%a{:href => "url"} Advanced Search
        %p
        = link_to "Create Project", new_project_path
        %br
        -#%p
        = link_to "My page", tamu_user_path(1)
        -#%br
        %br
    #right
        %table{:border => 1, :width => "70%"}
            %tr{:height => "10px"}
                %th{:align=> "left"}
                    = link_to "Project Name", unapproved_projects_index_path(:sort => :name)
                %th{:align=> "left"} Description
                %th{:align=> "left"} Status
                %th{:align=> "left"} Tags
                %th{:align=> "left"}
                    = link_to "Agency", unapproved_projects_index_path(:sort => :agency)
                %th{:align=> "left"}
                    = link_to "Date", unapproved_projects_index_path(:sort => :date)
                %th{:align=> "left"} Approve Project
        
            - @projects.each do |project|
                %tr{:height => "10px"}
                    %td= link_to project.name, project_path(project)
                    %td= project.description
                    %td= project.status
                    %td= project.tags.join ", "
                    %td= link_to project.agency.name, agency_path(project.agency)
                    %td= project.created_at.to_date
                    %td= button_to 'Approve', approve_project_path(project)
    #footer
