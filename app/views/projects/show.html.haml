%h2#name Details about #{@project.name}

%h3 Description:
%p#description= @project.description

%h3 Tags:
%p#tags= @project.tags.join(", ")

%h3 Status:
%p#status= @project.status

%h3 Agency:
%p#agency= link_to @project.agency.name, agency_path(@project.agency) 

- if @current_user.class.name == "TamuUser" and @current_user.admin?
    - if !@project.approved
        = button_to 'Approve Project', approve_project_path(@project),:class=>"btn btn-warning"
    - else
        = button_to 'Unapprove Project', unapprove_project_path(@project),:class=>"btn btn-warning"
        
- if @current_user == @project.agency
    #edit-delete
    = button_to 'Edit', edit_project_path(@project), :method => :get, :class=>"btn btn-primary"
    = button_to 'Delete', project_path(@project), :method => :delete, :confirm => 'Are you sure?', :id=>"delete", :class=>"btn btn-danger"

%br
- if @current_user.class.name == "TamuUser"
    = button_to 'Back to project list', projects_path,:class=>"btn btn-info"
