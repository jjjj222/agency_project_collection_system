    #right
        %table{:border => 1, :width => "70%"}
            %tr{:height => "10px"}
                %th{:align=> "left"}
                    = link_to "Project Name", projects_path(:sort => :name)
                %th{:align=> "left"} Description
                %th{:align=> "left"} Status
                %th{:align=> "left"} Tags
                %th{:align=> "left"}
                    = link_to "Agency", projects_path(:sort => :agency)
                %th{:align=> "left"}
                    = link_to "Date", projects_path(:sort => :date)
                - if @current_user.is_a?(TamuUser) and @current_user.admin?
                    %th{:align=> "left"} Unapprove Project
        
            - @projects.each do |project|
                %tr{:height => "10px"}
                    %td= link_to project.name, project_path(project)
                    %td= project.description
                    %td= project.status
                    %td= project.tags.join ", "
                    %td= link_to project.agency.name, agency_path(project.agency)
                    %td= project.created_at.to_date
                    - if @current_user.is_a?(TamuUser) and @current_user.admin?
                        %td= button_to 'Unapprove Project', unapprove_project_path(project),:class=>"btn btn-warning"
