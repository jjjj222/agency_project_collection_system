%link{:href => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", :rel => "stylesheet"}
  %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"}
  %script{:src => "http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"}

.container
  %h2#name= @agency.name
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#my_projects"} My Projects
    %li
      %a{"data-toggle" => "tab", :href => "#my_profile"} My Profiles
    %li
      %a{"data-toggle" => "tab", :href => "#more"} More

    .tab-content
    #my_projects.tab-pane.fade.in.active
      %table{:border => 1, :width => "70%"}
        %tr{:height => "10px"}
          %th{:align=> "left"} Project Name
          %th{:align=> "left"} Description
          %th{:align=> "left"} Status
          %th{:align=> "left"} Tags

        - @agency.projects.each do |project|
          %tr{:height => "10px"}
            %td= link_to project.name, project_path(project)
            %td= project.description
            %td= project.status
            %td= project.tags.join ", "


= link_to 'Edit', edit_agency_path(@agency.id)

- if @current_user.class.name == "TamuUser" and @current_user.admin?
  - if !@agency.approved
    = button_to 'Approve Agency', approve_agency_path(@agency)
  - else
    = button_to 'Unapprove Agency', unapprove_agency_path(@agency)
