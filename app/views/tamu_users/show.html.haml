.container
  %h2#name= @tamu_user.name
  %ul.nav.nav-tabs
    %li.active
      %a{"data-toggle" => "tab", :href => "#my_projects"} My Projects
    %li
      %a{"data-toggle" => "tab", :href => "#my_profile"} My Profiles
    %li
      %a{"data-toggle" => "tab", :href => "#more"} More

  .tab-content
    #my_projects.tab-pane.fade.in.active
      %table{:border => 1, :width => "70%", :class=>"view_tables"}
        %tr{:height => "10px"}
          %th{:align=> "left"}
            = link_to "Project Name", tamu_user_path(@current_user, :sort => :name)
          %th{:align=> "left"} Description
          %th{:align=> "left"} Status
          %th{:align=> "left"} Tags
          %th{:align=> "left"}
            = link_to "Date", tamu_user_path(@current_user, :sort => :date)
          %th{:align=> "left"}
            = link_to "Agency", tamu_user_path(@current_user, :sort => :agency)

        -#- ProjectPresenter.all(@tamu_user.projects) do |project|
        - ProjectPresenter.all(@projects) do |project|
          %tr{:height => "10px"}
            %td= project.profile
            %td= project.description
            %td= project.status
            %td= project.tags
            %td= project.date
            %td= project.agency_profile
    
    #my_profile.tab-pane.fade
      %h3 My Profile
      %h3 <i class="fa fa-child" aria-hidden="true"></i> Role:
      %p#role= @tamu_user.role.capitalize

      %h3 <i class="fa fa-envelope" aria-hidden="true"></i> Email:
      %p#email=  @tamu_user.email
      
      -if @current_user.is_a?(TamuUser) and @current_user.admin?
        %h3 Admin Status:
        %p#admin= @tamu_user.admin
      
      - if @current_user == @tamu_user
        = link_to 'Edit Profile', edit_tamu_user_path(@tamu_user.id)
        
      - if @current_user.is_a?(TamuUser) and @current_user.admin?
        - if @tamu_user.is_unapproved_professor?
          = button_to 'Approve as Faculty', approve_professor_path(@tamu_user)
        - else
          = button_to 'Unapprove as Faculty', unapprove_professor_path(@tamu_user)

    #more.tab-pane.fade
      %h3 More
      %p Something more
